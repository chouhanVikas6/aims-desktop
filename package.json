{
  "name": "aims-desktop",
  "productName": "AIMS Desktop",
  "version": "1.0.0",
  "description": "AIMS Desktop - Aerial Image Management System",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": " electron-builder --win nsis",
    "build:linux": "electron-builder --linux AppImage",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win nsis --linux AppImage",
    "make": "npm run build:win"
  },
  "author": {
    "name": "AIMS Team",
    "email": "chouhanviky9@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "dmg-builder": "^24.13.3",
    "electron": "^39.2.4",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.aims.desktop",
    "productName": "AIMS Desktop",
    "npmRebuild": false,
    "forceCodeSigning": false,
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources/aims-backend",
        "to": "aims-backend"
      },
      {
        "from": "resources/aims-backend.exe",
        "to": "aims-backend.exe"
      },
      {
        "from": "resources/aims-frontend",
        "to": "aims-frontend"
      },
      {
        "from": "node_modules/@vscode/sqlite3",
        "to": "node_modules/sqlite3"
      }
    ],
    "files": [
      "src/**/*",
      "package.json",
      "node_modules/@vscode/sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "AIMS-Desktop-Setup.exe"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "AIMS-Desktop.AppImage"
    },
    "mac": {
      "target": "zip",
      "artifactName": "AIMS-Desktop-macOS.zip"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@vscode/sqlite3": "^5.1.8-vscode",
    "axios": "^1.12.2",
    "events": "^3.3.0",
    "sqlite3": "^5.1.7",
    "tree-kill": "^1.2.2"
  },
  "browser": {
    "crypto": false
  }
}
