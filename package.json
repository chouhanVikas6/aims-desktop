{
  "name": "aims-desktop",
  "productName": "Aims 3D Desktop",
  "version": "1.0.0",
  "description": "Aims 3D Desktop - Aerial Intelligence Mapping Suite",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": " electron-builder --win nsis",
    "build:linux": "electron-builder --linux AppImage",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win nsis --linux AppImage",
    "make": "npm run build:win",
    "install:backend:prod": "cd resources/aims-backend && npm ci --production --legacy-peer-deps",
    "prebuild": "npm run install:backend:prod"
  },
  "author": {
    "name": "Aims 3D Team",
    "email": "chouhanviky9@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "dmg-builder": "^24.13.3",
    "electron": "^39.2.4",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.aims.desktop",
    "productName": "Aims 3D Desktop",
    "icon": "build/icons/256x256.png",
    "npmRebuild": false,
    "forceCodeSigning": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "resources/aims-backend",
        "to": "aims-backend"
      },
      {
        "from": "resources/aims-backend.exe",
        "to": "aims-backend.exe"
      },
      {
        "from": "resources/aims-frontend",
        "to": "aims-frontend"
      },
      {
        "from": "node_modules/@vscode/sqlite3",
        "to": "node_modules/sqlite3"
      }
    ],
    "files": [
      "src/**/*",
      "package.json",
      ".env",
      "node_modules/@vscode/sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "Aims-3D-Desktop-Setup.exe",
      "icon": "build/icons/256x256.png"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "Aims-3D-Desktop.AppImage",
      "icon": "build/icons/256x256.png"
    },
    "mac": {
      "target": "zip",
      "artifactName": "Aims-3D-Desktop-macOS.zip",
      "icon": "build/icons/256x256.png"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@vscode/sqlite3": "^5.1.8-vscode",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "events": "^3.3.0",
    "sqlite3": "^5.1.7",
    "tree-kill": "^1.2.2"
  },
  "browser": {
    "crypto": false
  }
}